.navbar{
    padding-top: 40rpx;
    width: 100%;
    height: 160rpx;
    background: linear-gradient(45deg,var(--theme),var(--theme-tint));
    display: flex;
    align-items: flex-end;
}
.navbar .nav-left{
    width: 200rpx;
    height: 100%;
    line-height: 120rpx;
    text-align: center;
    font-size: 20px;
    color: #fff;
}
.navbar .nav-center{
    flex: 1;
    display: flex;
    align-items: center;
    height: 100%;
    padding-right: 220rpx;
}